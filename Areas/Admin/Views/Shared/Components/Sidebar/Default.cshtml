                @foreach(var item in Model.Users)
                {
                    <li>
                        <a href="/Admin/Chat/Details/@item.Id">
                            <i class="bi bi-circle"></i><span>@item.FullName (@item.Email)</span>
                        </a>
                    </li>
                }

            </ul>
